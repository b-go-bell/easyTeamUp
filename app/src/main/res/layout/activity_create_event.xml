<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.EventActivities.CreateEventActivities.CreateEventActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/descrip_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_max="640dp"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/create_new_event"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/create_new_event"
                    android:fontFamily="@font/rubik_bold"
                    android:textSize="36dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="40dp"
                    android:textColor="@color/gray"/>
                <EditText
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    android:hint="@string/event_title"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/medium_gray"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textShortMessage"
                    />
                <EditText
                    android:id="@+id/event_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    android:hint="@string/event_address"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/medium_gray"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textPostalAddress"
                    />
                <EditText
                    android:id="@+id/event_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    android:hint="@string/event_description"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/medium_gray"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textLongMessage"
                    />
                <TextView
                    android:id="@+id/pub_or_priv"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/public_or_private"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                    app:layout_constraintBottom_toTopOf="@+id/submit"
                    app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:id="@+id/private_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/priv"
                        android:textColor="@color/gray"
                        android:textSize="18dp"
                        app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                        app:layout_constraintBottom_toTopOf="@+id/submit"
                        app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/privacy_toggle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                        app:layout_constraintBottom_toTopOf="@+id/submit"
                        android:layout_marginHorizontal="6dp"
                        app:thumbTint="@color/blue"
                        app:trackTint="@color/gray"
                        />
                    <TextView
                        android:id="@+id/public_event"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:layout_gravity="center"
                        android:fontFamily="@font/rubik_regular"
                        android:text="@string/pub"
                        android:textColor="@color/gray"
                        app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                        app:layout_constraintBottom_toTopOf="@+id/submit"
                        app:layout_constraintStart_toEndOf="@+id/map_toggle"
                        app:layout_constraintEnd_toEndOf="parent"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/event_length_text"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/event_length_text"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                    app:layout_constraintBottom_toTopOf="@+id/submit"
                    app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <EditText
                    android:id="@+id/event_length"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    android:hint="@string/minutes"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/medium_gray"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="number"
                    />
                <TextView
                    android:id="@+id/invite_users_text"
                    android:layout_marginTop="20dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/invite_users"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                    app:layout_constraintBottom_toTopOf="@+id/submit"
                    app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <EditText
                    android:id="@+id/user_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/logo"
                    android:hint="@string/user_email"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/medium_gray"
                    android:fontFamily="@font/rubik_regular"
                    android:inputType="textLongMessage"
                    />
                <Button
                    android:id="@+id/invite_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_medium"
                    android:backgroundTint="@color/blue"
                    android:layout_marginTop="10dp"
                    android:text="@string/invite_user"
                    android:textAllCaps="false"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/invited_users_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_max="80dp"
                    android:layout_marginTop="5dp">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_max="60dp"
                        app:layout_constraintVertical_bias="0">
                        <TextView
                            android:id="@+id/event_invitees"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:text="@string/no_invited_users"
                            android:fontFamily="@font/rubik_medium_italic"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.core.widget.NestedScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/invite_error"
                    android:layout_width="200dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_regular_italic"
                    android:text=""
                    android:textColor="@color/coral"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:id="@+id/add_availability"
                    android:layout_marginTop="20dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/add_availability"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                    app:layout_constraintBottom_toTopOf="@+id/submit"
                    app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <Button
                    android:id="@+id/times"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/pick_range"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/rubik_bold_italic"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="6dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/times_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_max="80dp"
                    android:layout_marginTop="5dp">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_max="60dp"
                        app:layout_constraintVertical_bias="0">
                        <TextView
                            android:id="@+id/times_submitted"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/no_times"
                            android:fontFamily="@font/rubik_medium_italic"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.core.widget.NestedScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:id="@+id/add_due"
                    android:layout_marginTop="20dp"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/rubik_regular"
                    android:text="@string/add_due"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    app:layout_constraintTop_toBottomOf="@+id/map_list_text"
                    app:layout_constraintBottom_toTopOf="@+id/submit"
                    app:layout_constraintEnd_toStartOf="@+id/map_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <Button
                    android:id="@+id/due_time"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/pick_due"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/rubik_bold_italic"
                    android:backgroundTint="@color/blue"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="6dp"
                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/due_time_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintHeight_max="80dp"
                    android:layout_marginTop="5dp">
                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHeight_max="60dp"
                        app:layout_constraintVertical_bias="0">
                        <TextView
                            android:id="@+id/due_submitted"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="@string/no_due_time"
                            android:fontFamily="@font/rubik_medium_italic"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>
                    </androidx.core.widget.NestedScrollView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Button
                    android:id="@+id/submit_event"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/submit_event"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/rubik_bold_italic"
                    android:backgroundTint="@color/green"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="24dp"
                    />
                <TextView
                    android:id="@+id/error"
                    android:layout_width="200dp"
                    android:gravity="center"
                    android:textSize="11sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/rubik_regular_italic"
                    android:text=""
                    android:textColor="@color/coral"
                    app:layout_constraintTop_toBottomOf="@+id/submit"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="6dp"
                    />
                <Button
                    android:id="@+id/cancel_event"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/cncl"
                    android:layout_marginHorizontal="10dp"
                    android:fontFamily="@font/rubik_bold_italic"
                    android:backgroundTint="@color/gray"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.fragment.app.FragmentContainerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>