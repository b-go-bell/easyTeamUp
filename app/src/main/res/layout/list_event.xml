<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sample Event Title "
            android:fontFamily="@font/rubik_bold"
            android:textColor="@color/blue"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hosted by XYZ at location"
            android:fontFamily="@font/rubik_bold"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            />
        <TextView
            android:id="@+id/event_invitation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invitation Pending"
            android:fontFamily="@font/rubik_bold"
            android:layout_marginTop="6dp"
            android:textColor="@color/orange"
            />
        <TextView
            android:id="@+id/event_due"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due at this time"
            android:fontFamily="@font/rubik_bold_italic"
            android:layout_marginTop="6dp"
            android:textColor="@color/gray"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>